<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Sum</title>
</head>
<body>
<h1>Sum</h1>
<% var sum = a+b+c+d %>
<% var colour = (sum%2) ? 'red' : 'blue' %>
<h2 style="font-size:<%= fontsize %>; border:<%= borderwidth %> solid <%= color %>;"><%= a %> + <%= b %> + <%= c %> + <%= d %> =
  <span style="color:<%= colour %>;"><%= sum %></span>
</h2>
</body>
</html>

